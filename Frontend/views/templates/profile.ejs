                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary" onclick="window.location.reload()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>

                <!-- Farm Details Tab -->
                <div class="tab-content" id="farm-tab">
                    <form id="farmDetailsForm">
                        <div class="form-section">
                            <h3 class="section-title">Farm Information</h3>
                            <div class="form-grid">
                                <div class="form-group">
                                    <label for="location">Farm Location *</label>
                                    <input type="text" id="location" name="location" required placeholder="City/District">
                                </div>
                                <div class="form-group">
                                    <label for="farmSize">Farm Size *</label>
                                    <select id="farmSize" name="farmSize" required>
                                        <option value="small">Small (Less than 2 acres)</option>
                                        <option value="medium">Medium (2-10 acres)</option>
                                        <option value="large">Large (10-50 acres)</option>
                                        <option value="xlarge">Very Large (More than 50 acres)</option>
                                    </select>
                                </div>

                                <div class="form-group full-width">
                                    <label for="notes">Additional Notes</label>
                                    <textarea id="notes" name="notes" placeholder="Any additional information about your farm..."></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary" onclick="window.location.reload()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>

                <!-- Security Tab -->
                <div class="tab-content" id="security-tab">
                    <form id="securityForm">
                        <div class="form-section">
                            <h3 class="section-title">Change Password</h3>
                            <div class="form-grid">
                                <div class="form-group full-width">
                                    <label for="currentPassword">Current Password *</label>
                                    <input type="password" id="currentPassword" name="currentPassword" required>
                                </div>
                                <div class="form-group">
                                    <label for="newPassword">New Password *</label>
                                    <input type="password" id="newPassword" name="newPassword" required minlength="8">
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword">Confirm New Password *</label>
                                    <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8">
                                </div>
                            </div>
                            <p style="font-size: 13px; color: var(--text-light); margin-top: 8px;">
                                Password must be at least 8 characters and include uppercase, lowercase, and numbers.
                            </p>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary" onclick="document.getElementById('securityForm').reset()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </form>

                    <div class="form-section" style="margin-top: 40px; padding-top: 40px; border-top: 1px solid var(--border);">
                        <h3 class="section-title" style="color: var(--danger);">Danger Zone</h3>
                        <div class="info-item" style="background: #FEE2E2; border-left: 4px solid var(--danger);">
                            <div>
                                <div class="info-label" style="color: var(--danger); font-weight: 600;">Delete Account</div>
                                <p style="font-size: 13px; color: #991B1B; margin-top: 4px;">Once you delete your account, there is no going back.</p>
                            </div>
                            <button class="btn btn-danger" onclick="confirmDeleteAccount()">Delete Account</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        class ProfileManager {
            constructor() {
                this.farmerData = null;
                this.init();
            }

            async init() {
                this.setupTabs();
                this.setupForms();
                await this.loadProfile();
            }

            setupTabs() {
                const tabs = document.querySelectorAll('.tab');
                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        const tabName = tab.getAttribute('data-tab');
                        this.switchTab(tabName);
                    });
                });
            }

            switchTab(tabName) {
                // Update tab buttons
                document.querySelectorAll('.tab').forEach(tab => {
                    tab.classList.remove('active');
                    if (tab.getAttribute('data-tab') === tabName) {
                        tab.classList.add('active');
                    }
                });

                // Update tab content
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(`${tabName}-tab`).classList.add('active');
            }

            setupForms() {
                // Personal Info Form
                document.getElementById('personalInfoForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.updatePersonalInfo();
                });

                // Farm Details Form
                document.getElementById('farmDetailsForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.updateFarmDetails();
                });

                // Security Form
                document.getElementById('securityForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.updatePassword();
                });
            }

            async loadProfile() {
                this.showLoading(true);
                try {
                    const response = await fetch('/api/farmer/profile');
                    const data = await response.json();

                    if (data.success && data.farmer) {
                        this.farmerData = data.farmer;
                        this.populateProfile(data.farmer);
                    }
                } catch (error) {
                    console.error('Failed to load profile:', error);
                    this.showAlert('Failed to load profile data', 'error');
                } finally {
                    this.showLoading(false);
                }
            }

            populateProfile(farmer) {
                // Sidebar
                document.getElementById('profileAvatar').textContent = farmer.fullName.charAt(0).toUpperCase();
                document.getElementById('profileName').textContent = farmer.fullName;
                document.getElementById('profileEmail').textContent = farmer.email;
                
                const farmSizes = { small: '< 2', medium: '2-10', large: '10-50', xlarge: '50+' };
                document.getElementById('farmSizeStat').textContent = farmSizes[farmer.farmSize] || '--';
                
                const memberDate = new Date(farmer.createdAt);
                document.getElementById('memberSince').textContent = memberDate.getFullYear();

                // Personal Info Form
                document.getElementById('fullName').value = farmer.fullName;
                document.getElementById('email').value = farmer.email;
                document.getElementById('phone').value = farmer.phone;
                document.getElementById('language').value = farmer.preferredLanguage || 'en';

                // Farm Details Form
                document.getElementById('location').value = farmer.location;
                document.getElementById('farmSize').value = farmer.farmSize;
                // if (farmer.soilType) document.getElementById('soilType').value = farmer.soilType;
                // if (farmer.irrigationType) document.getElementById('irrigationType').value = farmer.irrigationType;
                if (farmer.notes) document.getElementById('notes').value = farmer.notes;
            }

            async updatePersonalInfo() {
                this.showLoading(true);
                const formData = {
                    fullName: document.getElementById('fullName').value.trim(),
                    phone: document.getElementById('phone').value.trim(),
                    preferredLanguage: document.getElementById('language').value
                };

                try {
                    const response = await fetch('/api/farmer/profile', {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });

                    const data = await response.json();

                    if (data.success) {
                        this.showAlert('Personal information updated successfully!', 'success');
                        await this.loadProfile();
                    } else {
                        this.showAlert(data.message || 'Failed to update profile', 'error');
                    }
                } catch (error) {
                    console.error('Update error:', error);
                    this.showAlert('An error occurred. Please try again.', 'error');
                } finally {
                    this.showLoading(false);
                }
            }

            async updateFarmDetails() {
                this.showLoading(true);
                const formData = {
                    location: document.getElementById('location').value.trim(),
                    farmSize: document.getElementById('farmSize').value,
                    // soilType: document.getElementById('soilType').value,
                    // irrigationType: document.getElementById('irrigationType').value,
                    notes: document.getElementById('notes').value.trim()
                };

                try {
                    const response = await fetch('/api/farmer/farm-details', {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });

                    const data = await response.json();

                    if (data.success) {
                        this.showAlert('Farm details updated successfully!', 'success');
                        await this.loadProfile();
                    } else {
                        this.showAlert(data.message || 'Failed to update farm details', 'error');
                    }
                } catch (error) {
                    console.error('Update error:', error);
                    this.showAlert('An error occurred. Please try again.', 'error');
                } finally {
                    this.showLoading(false);
                }
            }

            async updatePassword() {
                const currentPassword = document.getElementById('currentPassword').value;
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                // Validation
                if (newPassword !== confirmPassword) {
                    this.showAlert('New passwords do not match!', 'error');
                    return;
                }

                if (newPassword.length < 8) {
                    this.showAlert('Password must be at least 8 characters!', 'error');
                    return;
                }

                if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/.test(newPassword)) {
                    this.showAlert('Password must include uppercase, lowercase, and numbers!', 'error');
                    return;
                }

                this.showLoading(true);

                try {
                    const response = await fetch('/api/farmer/change-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ currentPassword, newPassword })
                    });

                    const data = await response.json();

                    if (data.success) {
                        this.showAlert('Password updated successfully!', 'success');
                        document.getElementById('securityForm').reset();
                    } else {
                        this.showAlert(data.message || 'Failed to update password', 'error');
                    }
                } catch (error) {
                    console.error('Password update error:', error);
                    this.showAlert('An error occurred. Please try again.', 'error');
                } finally {
                    this.showLoading(false);
                }
            }

            showAlert(message, type) {
                const alertContainer = document.getElementById('alertContainer');
                const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
                
                alertContainer.innerHTML = `
                    <div class="alert ${alertClass} show">
                        ${message}
                    </div>
                `;

                setTimeout(() => {
                    alertContainer.innerHTML = '';
                }, 5000);

                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            showLoading(show) {
                const overlay = document.getElementById('loadingOverlay');
                if (show) {
                    overlay.classList.add('show');
                } else {
                    overlay.classList.remove('show');
                }
            }
        }

        function confirmDeleteAccount() {
            if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                if (confirm('This will permanently delete all your data. Are you absolutely sure?')) {
                    // Call delete API
                    fetch('/api/farmer/delete-account', {
                        method: 'DELETE'
                    }).then(() => {
                        window.location.href = '/auth/login';
                    });
                }
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            new ProfileManager();
        });
    </script>

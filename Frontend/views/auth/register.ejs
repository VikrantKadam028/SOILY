    <style>
      /* Soily Registration Form - Complete & Self-Contained */

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: poppins;
        /* background: linear-gradient(135deg, #25995c 0%, #007236 100%); */
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        line-height: 1.5;
        position: relative;
      }

      body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><path d="M10 10h80v80H10z" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="2"/></svg>');
        opacity: 0.3;
      }

      .register-container {
        width: 100%;
        max-width: 480px;
        position: relative;
        z-index: 1;
      }

      .register-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 48px 40px;
        /* box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3); */
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
      }

      .register-header {
        text-align: center;
        margin-bottom: 36px;
      }

      .logo {
        margin-bottom: 18px;
        display: flex;
        justify-content: center;
        margin: 0 auto;
      }
      .logo img {
        width: auto;
        height: 60px;
        margin-bottom: 20px;
      }

      .register-header h1 {
        color: #1a1f36;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
      }

      .register-header p {
        color: #6b7385;
        font-size: 14px;
        font-weight: 400;
      }

      /* Input Groups with Floating Labels */
      .input-group {
        position: relative;
        margin-bottom: 24px;
      }

      .input-group input,
      .input-group select {
        width: 100%;
        background: #ffffff;
        border: 1.5px solid #e3e8ee;
        border-radius: 8px;
        padding: 16px 14px 8px 14px;
        color: #1a1f36;
        font-size: 16px;
        font-weight: 400;
        outline: none;
        transition: all 0.2s ease;
        font-family: inherit;
      }

      .input-group select {
        padding: 14px 14px;
        cursor: pointer;
      }

      .input-group input:focus,
      .input-group select:focus {
        border-color: #25995c;
        box-shadow: 0 0 0 3px rgba(37, 153, 92, 0.1);
      }

      .input-group input::placeholder {
        color: transparent;
      }

      .input-group label {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #8792a2;
        font-size: 16px;
        font-weight: 400;
        pointer-events: none;
        transition: all 0.2s ease;
        background: #ffffff;
        padding: 0 4px;
      }

      .input-group.select-group label {
        top: -10px;
        font-size: 12px;
        font-weight: 500;
        color: #25995c;
        transform: translateY(0);
      }

      .input-group input:focus + label,
      .input-group input:not(:placeholder-shown) + label {
        top: -10px;
        font-size: 12px;
        font-weight: 500;
        color: #25995c;
        transform: translateY(0);
      }

      .input-group input:not(:focus):not(:placeholder-shown) + label {
        color: #6b7385;
      }

      /* Password Toggle */
      .input-group:has(.password-toggle) input {
        padding-right: 42px;
      }

      .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #8792a2;
        padding: 6px;
        border-radius: 4px;
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .password-toggle:hover {
        color: #25995c;
      }

      /* Language Selection */
      .language-section {
        margin-bottom: 28px;
        padding: 20px;
        background: #f8fdf9;
        border-radius: 8px;
        border: 1.5px solid #e3f5e8;
      }

      .language-section h3 {
        color: #1a1f36;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .language-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 8px;
      }

      .language-option {
        display: none;
      }

      .language-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 12px 8px;
        background: #ffffff;
        border: 1.5px solid #e3e8ee;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 13px;
        font-weight: 500;
        color: #6b7385;
        text-align: center;
      }

      .language-option:checked + .language-label {
        background: #25995c;
        border-color: #25995c;
        color: #ffffff;
        transform: scale(1.05);
        box-shadow: 0 4px 12px rgba(37, 153, 92, 0.3);
      }

      .language-label:hover:not(:has(input:checked)) {
        border-color: #25995c;
        background: #f8fdf9;
      }

      .language-emoji {
        font-size: 20px;
        margin-bottom: 4px;
      }

      /* Terms Checkbox */
      .terms-container {
        display: flex;
        align-items: flex-start;
        margin-bottom: 28px;
        font-size: 13px;
        color: #6b7385;
        gap: 10px;
      }

      .terms-container input[type="checkbox"] {
        display: none;
      }

      .checkmark {
        width: 20px;
        height: 20px;
        border: 1.5px solid #d1d9e0;
        border-radius: 4px;
        flex-shrink: 0;
        position: relative;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        color: transparent;
        cursor: pointer;
      }

      .terms-container input[type="checkbox"]:checked + .checkmark {
        background: #25995c;
        border-color: #25995c;
        color: white;
      }

      .terms-text a {
        color: #25995c;
        text-decoration: none;
        font-weight: 500;
      }

      .terms-text a:hover {
        text-decoration: underline;
      }

      /* Submit Button */
      .submit-btn {
        width: 100%;
        background: linear-gradient(135deg, #25995c 0%, #1d7a48 100%);
        color: #ffffff;
        border: none;
        border-radius: 8px;
        padding: 16px 20px;
        cursor: pointer;
        font-family: inherit;
        font-size: 16px;
        font-weight: 600;
        position: relative;
        margin-bottom: 24px;
        transition: all 0.3s ease;
        overflow: hidden;
        min-height: 52px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(37, 153, 92, 0.3);
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(37, 153, 92, 0.4);
      }

      .submit-btn:active {
        transform: translateY(0);
      }

      .submit-btn:disabled {
        background: #a2a7b5;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }

      .btn-text {
        transition: opacity 0.2s ease;
      }

      .btn-loader {
        position: absolute;
        opacity: 0;
        transition: opacity 0.2s ease;
        color: #ffffff;
      }

      .submit-btn.loading .btn-text {
        opacity: 0;
      }

      .submit-btn.loading .btn-loader {
        opacity: 1;
      }

      /* Login Link */
      .login-link {
        text-align: center;
        font-size: 14px;
        color: #6b7385;
      }

      .login-link a {
        color: #25995c;

    <script>
      class SoilyRegisterForm {
        constructor() {
          this.form = document.getElementById("registerForm");
          this.submitButton = this.form.querySelector(".submit-btn");
          this.successMessage = document.getElementById("successMessage");
          this.init();
        }

        init() {
          this.bindEvents();
          this.setupPasswordToggles();
        }

        bindEvents() {
          this.form.addEventListener("submit", (e) => this.handleSubmit(e));

          // Real-time validation
          const fields = [
            "fullName",
            "email",
            "phone",
            "location",
            "farmSize",
            "password",
            "confirmPassword",
          ];

          fields.forEach((field) => {
            const input = document.getElementById(field);
            input.addEventListener("blur", () => this.validateField(field));
            input.addEventListener("input", () => this.clearError(field));
          });
        }

        setupPasswordToggles() {
          ["passwordToggle", "confirmPasswordToggle"].forEach((id) => {
            const toggle = document.getElementById(id);
            const inputId = id.replace("Toggle", "");
            const input = document.getElementById(inputId);

            toggle.addEventListener("click", () => {
              const type = input.type === "password" ? "text" : "password";
              input.type = type;
              toggle.style.color = type === "text" ? "#25995C" : "#8792a2";
            });
          });
        }

        validateField(field) {
          const input = document.getElementById(field);
          const value = input.value.trim();

          switch (field) {
            case "fullName":
              if (!value) {
                this.showError(field, "Full name is required");
                return false;
              }
              if (value.length < 3) {
                this.showError(field, "Name must be at least 3 characters");
                return false;
              }
              break;

            case "email":
              if (!value) {
                this.showError(field, "Email is required");
                return false;
              }
              if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
                this.showError(field, "Please enter a valid email");
                return false;
              }
              break;

            case "phone":
              if (!value) {
                this.showError(field, "Phone number is required");
                return false;
              }
              if (!/^[6-9]\d{9}$/.test(value.replace(/\s/g, ""))) {
                this.showError(
                  field,
                  "Please enter a valid 10-digit phone number"
                );
                return false;
              }
              break;

            case "location":
              if (!value) {
                this.showError(field, "Farm location is required");
                return false;
              }
              break;

            case "farmSize":
              if (!value) {
                this.showError(field, "Please select your farm size");
                return false;
              }
              break;

            case "password":
              if (!value) {
                this.showError(field, "Password is required");
                return false;
              }
              if (value.length < 8) {
                this.showError(field, "Password must be at least 8 characters");
                return false;
              }
              if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/.test(value)) {
                this.showError(field, "Include uppercase, lowercase & number");
                return false;
              }
              break;

            case "confirmPassword":
              const password = document.getElementById("password").value;
              if (!value) {
                this.showError(field, "Please confirm your password");
                return false;
              }
              if (value !== password) {
                this.showError(field, "Passwords do not match");
                return false;
              }
              break;
          }

          this.clearError(field);
          return true;
        }

        showError(field, message) {
          const inputGroup = document
            .getElementById(field)
            .closest(".input-group");
          const errorElement = document.getElementById(`${field}Error`);

          inputGroup.classList.add("error");
          errorElement.textContent = message;
          errorElement.classList.add("show");
        }

        clearError(field) {
          const inputGroup = document
            .getElementById(field)
            .closest(".input-group");
          const errorElement = document.getElementById(`${field}Error`);

          inputGroup.classList.remove("error");
          errorElement.classList.remove("show");
          setTimeout(() => {
            errorElement.textContent = "";
          }, 200);
        }

        async handleSubmit(e) {
          e.preventDefault();

          // Validate all fields
          const fields = [
            "fullName",
            "email",
            "phone",
            "location",
            "farmSize",
            "password",
            "confirmPassword",
          ];

          let isValid = true;
          fields.forEach((field) => {
            if (!this.validateField(field)) {
              isValid = false;
            }
          });

          // Check terms
          const termsCheckbox = document.getElementById("terms");
          if (!termsCheckbox.checked) {
            alert("Please accept the Terms of Service and Privacy Policy");
            isValid = false;
          }

          if (!isValid) return;

          this.setLoading(true);

          // Get selected language
          const selectedLanguage = document.querySelector(
            'input[name="language"]:checked'
          ).value;

          // Prepare form data
          const formData = {
            fullName: document.getElementById("fullName").value.trim(),
            email: document.getElementById("email").value.trim(),
            phone: document.getElementById("phone").value.trim(),
            location: document.getElementById("location").value.trim(),
            farmSize: document.getElementById("farmSize").value,
            password: document.getElementById("password").value,
            language: selectedLanguage,
          };

          try {
            const response = await fetch("/auth/register", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            const data = await response.json();

            if (response.ok) {
              this.showSuccess();
              // Redirect after 2.5 seconds
              setTimeout(() => {
                window.location.href = "/auth/login";
              }, 2500);
            } else {
              // Show error
              if (data.field) {
                this.showError(data.field, data.message);
              } else {
                alert(data.message || "Registration failed. Please try again.");
              }
            }
          } catch (error) {
            console.error("Registration error:", error);
            alert("An error occurred. Please try again.");
          } finally {
            this.setLoading(false);
          }
        }

        setLoading(loading) {
          this.submitButton.classList.toggle("loading", loading);
          this.submitButton.disabled = loading;
        }

        showSuccess() {
          this.form.style.transform = "scale(0.95)";
          this.form.style.opacity = "0";

          setTimeout(() => {
            this.form.style.display = "none";
            document.querySelector(".login-link").style.display = "none";
            this.successMessage.classList.add("show");
          }, 300);
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        new SoilyRegisterForm();
      });
    </script>
  </body>
